<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="TestApp.Views.SignUpPage"
             Visual="Material">
    <Frame HasShadow="True" Padding="10">
        <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand">
            <Entry Text="{Binding _user.UserName}" x:Name="UserNameEntry" Placeholder="Enter Username" Margin="10"/>
            <Entry x:Name="PasswordEntry" Placeholder="Enter Password" IsPassword="True" Margin="10"/>
            <Entry x:Name="ConfirmPasswordEntry" IsPassword="True" Placeholder="Confirm Password" Margin="10"/>
            <Label Text="Passwords do not match" TextColor="Red" FontAttributes="Italic" HorizontalTextAlignment="Center"
               x:Name="ErrorLabel" IsVisible="False" HorizontalOptions="CenterAndExpand"/>
            <StackLayout Orientation="Horizontal">
                <Button Text="Register" Visual="Default" x:Name="submitBtn" Clicked="submitBtn_Clicked" HorizontalOptions="Center" Margin="20"/>
                <Button Text="Cancel" Command="{Binding CancelCommand}" HorizontalOptions="Center" Margin="20"/>
            </StackLayout>


        </StackLayout>
    </Frame>
</ContentPage>